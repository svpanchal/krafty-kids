---
// src/pages/index.astro
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Hero from '../components/Hero.astro';
import OurApproach from "../components/OurApproach.astro";
import AboutFounder from "../components/AboutFounder.astro";
---
<Layout title="Krafty Kids">
  <Header />
  <main>
    <Hero />

    <!-- Our Approach -->
    <OurApproach />

    <!-- About / Founder -->
    <AboutFounder />

    <!-- Photo Gallery -->
    <section id="gallery" class="py-24 border-t border-black/5 bg-white">
      <div class="container">
        <p class="section-kicker">Photo Gallery</p>
        <h2 class="section-title mt-3 text-3xl md:text-5xl">Moments from our sessions</h2>
        <p class="mt-4 text-slate-600">Grid goes here.</p>
      </div>
    </section>

    <!-- Contact -->
    <section id="contact" class="py-24 border-t border-black/5 bg-white">
      <div class="container">
        <p class="section-kicker">Get in touch</p>
        <h2 class="section-title mt-3 text-3xl md:text-5xl">Volunteer or partner with us</h2>
        <p class="mt-4 text-slate-600">hello@kraftykids.org • Instagram • Donate</p>
      </div>
    </section>
  </main>
</Layout>
