---
import DividerDots from "./DividerDots.astro";

const pillars = [
  {
    title: "Creative Expression",
    body: "Guided art-making gives kids a safe, proven way to explore emotions, build self-awareness, and transform complicated feelings into concrete form through creative work.",
    tint: "bg-[var(--brand-peach)]/35",
  },
  {
    title: "Safe Connection",
    body: "In small group sessions led with community partners, kids find belonging, supportive mentors, and friendships that strengthen confidence and care.",
    tint: "bg-[var(--brand-lilac)]/20",
  },
  {
    title: "Resilient Growth",
    body: "Completing creative projects helps kids practice coping skills, build resilience, and use donated, reusable materials in ways that keep sessions sustainable and accessible for everyone.",
    tint: "bg-emerald-50/70",
  },
];
---

<section id="approach" class="relative isolate overflow-hidden py-20 md:py-28 bg-[var(--brand-peach)]/25">
  {/* Background polish: soft peach â†’ transparent diagonal wash */}
  <div
    class="pointer-events-none absolute inset-0 -z-10"
    style="background:
      radial-gradient(60% 50% at 20% 0%, rgba(255,233,223,.45), transparent 70%),
      linear-gradient(120deg, rgba(255,233,223,.18), transparent 55%)"
  ></div>

  <div class="container">
    {/* Section header */}
    <header class="mx-auto mb-12 md:mb-14 max-w-3xl text-center">
      <p class="section-kicker">Our Approach</p>
      <h2 class="section-title mt-3 text-3xl md:text-5xl">
        Creativity as care. Community as confidence.
      </h2>
      <p class="mt-4 text-slate-600">
        Our programs provides opportunities for kids to build emotional resilience, confidence, and healthy coping skills through creative work.
      </p>
    </header>

    {/* Cards */}
    <div class="grid gap-6 md:gap-8 md:grid-cols-3">
      {pillars.map((p) => (
        <article
          class={`group rounded-2xl p-7 md:p-8 shadow-sm transition hover:shadow-md ${p.tint}`}
        >
          <div class="mb-5 flex items-center justify-center">
            {/* White icon tile placeholder */}
            <div
              class="grid h-14 w-14 place-items-center rounded-2xl bg-white/95 ring-1 ring-black/10 shadow-sm"
              aria-hidden="true"
            >
              {/* Placeholder icon for now */}
              <div class="h-7 w-7 rounded-full bg-black/10"></div>
            </div>
          </div>

          <h3 class="text-lg md:text-xl font-semibold text-slate-900">
            {p.title}
          </h3>
          <p class="mt-3 text-slate-700 leading-relaxed">
            {p.body}
          </p>
        </article>
      ))}
    </div>
  </div>
</section>
