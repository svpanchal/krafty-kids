---
/*
  Expects QR image here:
  public/images/donate-qr.png
*/
const qr = "/images/donate-qr.png";
---

<section id="donate" class="py-20 md:py-28 bg-[var(--brand-peach)]/25">
  <div class="container">
    <div class="mx-auto max-w-3xl text-center">
      <!-- Section kicker -->
      <p class="section-kicker">Support the mission</p>

      <!-- Primary headline -->
      <h2 class="section-title mt-3 text-3xl md:text-5xl">
        Help bring creative care to more kids
      </h2>

      <!-- Mission explanation -->
      <p class="mt-6 text-slate-600 leading-relaxed max-w-2xl mx-auto">
        Your donation helps us provide free art-based workshops for underserved
        youth, supply sustainable materials, and expand access to creativity,
        healing, and connection.
      </p>

      <!-- Impact statement -->
      <p class="impact-highlight mt-6 max-w-xl mx-auto">
        <span class="impact-emoji">ðŸŽ¨</span>
        <span class="impact-number">$25</span> helps bring creative care to
        <span class="impact-number">25 children</span> at a Krafty Kids workshop.
        <span>Every dollar helps!</span>
      </p>

      <!-- Donation methods -->
      <div class="mt-10 flex flex-col items-center">
        <!-- Primary CTA -->
        <a
          href="https://paypal.me/KraftyKidsOrg"
          target="_blank"
          rel="noopener noreferrer"
          class="donate-button"
        >
          Donate via PayPal
        </a>

        <!-- Alternate method label -->
        <p class="alternate-method-label mt-5">or scan to donate instantly</p>

        <!-- QR code -->
        <div class="qr-card mt-3">
          <img
            src={qr}
            alt="PayPal QR code for donating to Krafty Kids"
            class="qr-image"
            loading="lazy"
          />
        </div>

        <!-- Trust footer -->
        <p class="mt-8 max-w-md mx-auto text-sm text-slate-500">
          Donations are securely processed through PayPal and go directly to
          supporting Krafty Kids workshops.
        </p>
      </div>
    </div>
  </div>

  <style>
    .impact-emoji {
      opacity: 0.75;
      margin-right: 0.35rem;
    }

    .impact-highlight {
      font-size: 1.25rem;
      line-height: 1.7;
      font-weight: 500;
      color: #334155;
    }

    .impact-number {
      color: var(--brand-coral, #e06666);
      font-weight: 700;
    }

    .impact-reassurance {
      font-weight: 400;
      color: #64748b;
      margin-left: 0.25rem;
    }

    .donate-button {
      display: inline-block;
      padding: 0.75rem 1.75rem;
      border-radius: 0.6rem;
      background: #e06666;
      color: white;
      font-weight: 600;
      font-size: 1.1rem;
      box-shadow: 0 4px 10px rgba(0, 0, 0, 0.08);
      transition: all 0.15s ease;
    }

    .donate-button:hover {
      background: #cc5959;
      transform: translateY(-1px);
    }

    .alternate-method-label {
      font-size: 0.85rem;
      color: #64748b;
    }

    .qr-card {
      padding: 1rem;
      border-radius: 1rem;
      background: white;
      border: 1px solid rgba(0, 0, 0, 0.08);
      box-shadow: 0 2px 6px rgba(0, 0, 0, 0.04);
    }

    .qr-image {
      width: 180px;
      height: 180px;
      object-fit: contain;
    }

    @media (min-width: 768px) {
      .impact-highlight {
        font-size: 1.35rem;
      }
    }
  </style>
</section>
